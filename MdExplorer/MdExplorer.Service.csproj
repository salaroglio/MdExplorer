<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RuntimeIdentifier>win10-x64</RuntimeIdentifier>
    <PublishSingleFile>true</PublishSingleFile>
    <UserSecretsId>86e04b2f-9fbb-4c74-a7c8-65ed9f01eac8</UserSecretsId>
    <Nullable>annotations</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <FileAlignment>512</FileAlignment>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>embedded</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DefineConstants>TRACE;DEBUG</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Documents\**" />
    <Content Remove="Documents\**" />
    <EmbeddedResource Remove="Documents\**" />
    <None Remove="Documents\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot\assets\MdExplorer.png" />
    <Content Remove="wwwroot\client2\favicon.ico" />
    <Content Remove="wwwroot\client2\index.html" />
    <Content Remove="wwwroot\client2\main.js" />
    <Content Remove="wwwroot\client2\md-explorer-md-explorer-module.js" />
    <Content Remove="wwwroot\client2\polyfills.js" />
    <Content Remove="wwwroot\client2\runtime.js" />
    <Content Remove="wwwroot\client2\styles.css" />
    <Content Remove="wwwroot\client2\vendor.js" />
    <Content Remove="wwwroot\javascripts\angular-resizable.min.css" />
    <Content Remove="wwwroot\javascripts\angular-resizable.min.js" />
    <Content Remove="wwwroot\welcome.html" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="eisvogel.tex" />
    <None Remove="MdExplorer.db" />
  </ItemGroup>


  <ItemGroup>
    <EmbeddedResource Include="eisvogel.tex" />
    <EmbeddedResource Include="MdExplorer.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="wwwroot\assets\MdExplorer.png" />
    <EmbeddedResource Include="wwwroot\client2\favicon.ico" />
    <EmbeddedResource Include="wwwroot\client2\index.html" />
    <EmbeddedResource Include="wwwroot\client2\main.js" />
    <EmbeddedResource Include="wwwroot\client2\md-explorer-md-explorer-module.js" />
    <EmbeddedResource Include="wwwroot\client2\polyfills.js" />
    <EmbeddedResource Include="wwwroot\client2\runtime.js" />
    <EmbeddedResource Include="wwwroot\client2\styles.css" />
    <EmbeddedResource Include="wwwroot\client2\vendor.js" />
    <EmbeddedResource Include="wwwroot\javascripts\angular-resizable.min.css" />
    <EmbeddedResource Include="wwwroot\javascripts\angular-resizable.min.js" />
    <EmbeddedResource Include="wwwroot\welcome.html" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" Version="1.11.34" />
    <PackageReference Include="Markdig" Version="0.25.0" />
    <PackageReference Include="System.Data.SQLite" Version="1.0.114.4" />
  </ItemGroup>

  <!--<ItemGroup>
    <Folder Include="client2\src\app\md-explorer\services\" />
    <Folder Include="client2\src\app\wwwroot\" />
  </ItemGroup>-->

  <ItemGroup>
    <ProjectReference Include="..\Ad.Tools.Dal.Abstractions\Ad.Tools.Dal.Abstractions\Ad.Tools.Dal.Abstractions.csproj" />
    <ProjectReference Include="..\Ad.Tools.Dal\Ad.Tools.Dal\Ad.Tools.Dal.csproj" />
    <ProjectReference Include="..\Ad.Tools.FluentMigrator\Ad.Tools.FluentMigrator\Ad.Tools.FluentMigrator.csproj" />
    <ProjectReference Include="..\MdExplorer.Abstractions\MdExplorer.Abstractions.csproj" />
    <ProjectReference Include="..\MdExplorer.bll\MdExplorer.Features.csproj" />
    <ProjectReference Include="..\MDExplorer.dal\MDExplorer.DataAccess.csproj" />
    <ProjectReference Include="..\MdExplorer.Migrations\MdExplorer.Migrations.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="MdExplorer.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Content Update="package-lock.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\PublishProfiles\" />
  </ItemGroup>


</Project>
