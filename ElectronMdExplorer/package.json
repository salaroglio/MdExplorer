{
  "name": "mdexplorer",
  "version": "2.0.11",
  "description": "This app will kill JIRA",
  "main": "index.js",
  "homepage": "https://github.com/salaroglio/MdExplorer",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "node scripts/bump-version.js",
    "build": "electron-builder"
  },
  "author": {
    "name": "carlo-emilio salaroglio",
    "email": "salaroglio@example.com"
  },
  "license": "ISC",
  "build": {
    "appId": "com.mdexplorer.app",
    "directories": {
      "output": "./Binaries"
    },
    "extraResources": [
      {
        "from": "./service_payload",
        "to": "app_service",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  },
  "devDependencies": {
    "electron": "^28.1.4",
    "electron-builder": "^26.0.12"
  }
}
